= simple_form_for [:venue, @promotion] do |f|
  = f.input :title
  = f.input :start_date_field, label: 'Start date', input_html:{ type: 'date' }
  = f.input :start_time_field, label: 'Start time', input_html:{ type: 'time' }
  = f.input :end_date_field, label: 'End date', input_html:{ type: 'date' }
  = f.input :end_time_field, label: 'End time', input_html:{ type: 'time' }
  = f.input :description

  .form-actions
    = f.button :submit, class: 'btn-primary'
