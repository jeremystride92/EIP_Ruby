= simple_form_for [:venue, @onboarding_text_message], url: venue_onboarding_text_message_path, method: :put do |f|
  .row
    .form-block.offset3.span6
      = f.label :custom_text
      = f.text_area :custom_text, style: 'width: 100%; height: 200px;'

  .form-actions
    = f.button :submit, class: 'btn btn-large btn-primary'
    = link_to 'Cancel', venue_path, class: 'btn btn-large'

- if @onboarding_text_message.persisted?
  .form-actions
    = button_to 'Delete Onboarding text message', venue_onboarding_text_message_path, method: :delete, confirm: 'Are you sure?', class: 'btn btn-large btn-danger pull-right'
