= form_for @card_theme do |f|
  - if @card_theme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card_theme.errors.count, "error")} prohibited this card_theme from being saved:"
      %ul
        - @card_theme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :portrait_background
    = f.text_field :portrait_background
  .field
    = f.label :landscape_background
    = f.text_field :landscape_background
  .actions
    = f.submit 'Save'
