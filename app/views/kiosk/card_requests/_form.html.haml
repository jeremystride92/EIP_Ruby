= simple_form_for @cardholder, url: kiosk_card_requests_path do |f|
  .row
    .form-block.span6.offset3
      = f.input :phone_number, input_html: { class: 'span6'}
      = f.input :first_name, input_html: { class: 'span6'}
      = f.input :last_name, input_html: { class: 'span6'}

  .form-actions
    = f.submit 'Request Card', class: 'btn btn-large btn-primary'
    = button_tag 'Cancel', class: 'btn btn-large'
