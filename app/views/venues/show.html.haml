%h1.page-header Dashboard
.row.row-section
  .venue-sub-block.span7
    %h2.block-title Activity
    .block-info.card-levels
      - @venue.card_levels.each_slice(4) do |slice|
        .row.row-sub-section
          - slice.each do |card_level|
            - card_name = "#{card_level.name} Card".pluralize(card_level.cards.size)
            .span1.card-level{ class: "theme-#{card_level.theme}", title: "#{card_level.name} Card".pluralize(card_level.cards.size), data: { toggle: 'tooltip', placement: 'bottom'  } }
              .card-content
                .card-count #{card_level.cards.size}
                .hidden-phone= truncate(card_level.name, length: 10) << " Card".pluralize(card_level.cards.size)
                .visible-phone= truncate(card_level.name, length: 21) << " Card".pluralize(card_level.cards.size)
  .venue-sub-block.span5.actions-block.show-overflow
    %h2.block-title Actions
    .block-info
      .row-fluid.row-sub-section
        .btn-group.span12
          %a.btn.btn-large.span12.dropdown-toggle{ 'data-toggle' => 'dropdown', 'href' => '#' }
            %i.icon-star-empty
            Issue Card Level Benefits
            %span.caret.pull-right
          %ul.dropdown-menu.pull-right
            - @venue.card_levels.each do |card_level|
              %li= link_to truncate(card_level.name, length: 40), venue_card_level_issue_benefit_path(card_level)
      .row-fluid.row-sub-section
        .btn-group.span12
          %a.btn.btn-large.span12.dropdown-toggle{ 'data-toggle' => 'dropdown', 'href' => '#' }
            %i.icon-credit-card
            Issue Cards
            %span.caret.pull-right
          %ul.dropdown-menu.pull-right
            - @venue.card_levels.each do |card_level|
              %li= link_to truncate(card_level.name, length: 40), new_batch_venue_cardholders_path(card_level)
.row.row-section
  .venue-sub-block.span12
    %h3.block-title.clearfix
      Promotions
      = link_to new_venue_promotion_path, title: "New Promotion", class: 'btn btn-large btn-success pull-right' do
        %i.icon-plus
    .block-info
      .row-fluid
        .span12= render 'promotions/list', promotions: @promotions

- content_for :javascripts do
  = javascript_include_tag 'dashboard'
