.row-fluid
  .span3
    .card-preview{ class: "theme-#{card.card_level.theme}" }
    .card-number
      EIP#
      = card.cardholder.phone_number
  .span3
    .card-name= "#{card.cardholder.first_name} #{card.cardholder.last_name}"
    %strong Individual Benefits
    %ul
      - card.benefits.each do |benefit|
        %li= benefit.description
  .actions.span6
    .row-fluid
      = link_to venue_card_edit_benefits_path(card), class: 'btn btn-large clearfix span6' do
        %i.icon-plus.pull-left
        .pull-left Issue Benefits
        %i.icon-caret-right.pull-right
    .row-fluid
      = simple_form_for card, url: venue_card_change_level_path(card), remote: true, html: { class: 'change-card-level', id: "edit_card_#{card.id}_card_level" } do |f|
        = f.input :card_level_id, collection: @card_levels, label: false, wrapper_html: { class: 'span6' }, input_html: { id: "card_#{card.id}_card_level_id"}
        = f.button :submit, value: 'Change', class: 'btn span2'
    .row-fluid
      = card_status_toggle_button card, classes: 'btn-small pull-right', form_class: 'change-card-status'
