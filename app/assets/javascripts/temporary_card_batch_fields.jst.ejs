<fieldset class="batch-fields" data-index="<%= index %>">
  <div class="control-group tel required batch_phone_number">
    <label class="tel required control-label" for="batch_<%= index %>_phone_number">
      <abbr title="required">*</abbr> Phone number
    </label>
    <div class="row">
      <div class="controls span5">
        <input class="string tel required span5" id="batch_<%= index %>_phone_number" name="batch[phones][<%= index %>][phone_number]" pattern="\d{10}" required="required" size="50" type="tel" />
        <p class="help-block">10-digit number, digits only</p>
      </div>
      <button class="btn btn-large btn-danger pull-right button-remove" data-index="<%= index %>">
        <i class="icon-minus"></i>
      </button>
    </div>
  </div>
</fieldset>
